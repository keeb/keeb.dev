#header
  margin: 0 auto 2rem
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-size: 100%

    ul
      margin: 0
      padding: 0
      list-style-type: none

      li
        margin-bottom: 10px
        text-transform: lowercase

        a
          display: inline-block
          margin-right: 15px
          padding-left: 1rem
          color: $color-accent-1
          border-right: 1px dotted
          border-color: $color-accent-1
          vertical-align: middle

        a:hover
          underline(5px, $color-accent-1)

        li
          margin-right: 15px
          border-right: 1px dotted
          border-color: $color-accent-1
          vertical-align: middle

        li:last-child
          border-right: 0

#ascii-art
  position: relative
  animation: wave-animation 8s ease-in-out infinite

#terminal-cursor
  color: $color-accent-1
  animation: cursor-blink 1s infinite
  font-size: 1em
  font-family: monospace
  vertical-align: top
  margin-left: 0.2em

@keyframes cursor-blink
  0%, 50%
    opacity: 1
  51%, 100%
    opacity: 0

@keyframes wave-animation
  0%
    color: $color-text
  5%
    background: linear-gradient(90deg, $color-accent-1 -20%, $color-accent-1 0%, $color-text 15%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  10%
    background: linear-gradient(90deg, $color-text 0%, $color-accent-1 10%, $color-accent-1 25%, $color-text 40%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  15%
    background: linear-gradient(90deg, $color-text 0%, $color-text 20%, $color-accent-1 35%, $color-accent-1 50%, $color-text 65%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  20%
    background: linear-gradient(90deg, $color-text 0%, $color-text 45%, $color-accent-1 60%, $color-accent-1 75%, $color-text 90%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  25%
    background: linear-gradient(90deg, $color-text 0%, $color-text 70%, $color-accent-1 85%, $color-accent-1 100%, $color-text 115%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  30%, 100%
    color: $color-text