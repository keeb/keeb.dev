#header
  padding: 3rem 1rem 2rem
  overflow-x: auto
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700

#ascii-art
  position: relative
  width: fit-content
  margin: 0 auto
  font-family: $font-family-mono
  font-size: clamp(0.5rem, 1.5vw, 1.1rem)
  line-height: 1.3
  animation: wave-animation 8s ease-in-out infinite
  white-space: pre

#terminal-cursor
  color: $color-accent-1
  animation: cursor-blink 1s infinite
  font-size: 1em
  font-family: monospace
  vertical-align: top
  margin-left: 0.2em

@keyframes cursor-blink
  0%, 50%
    opacity: 1
  51%, 100%
    opacity: 0

@keyframes wave-animation
  0%
    color: $color-text
  5%
    background: linear-gradient(90deg, $color-accent-1 -20%, $color-accent-1 0%, $color-text 15%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  10%
    background: linear-gradient(90deg, $color-text 0%, $color-accent-1 10%, $color-accent-1 25%, $color-text 40%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  15%
    background: linear-gradient(90deg, $color-text 0%, $color-text 20%, $color-accent-1 35%, $color-accent-1 50%, $color-text 65%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  20%
    background: linear-gradient(90deg, $color-text 0%, $color-text 45%, $color-accent-1 60%, $color-accent-1 75%, $color-text 90%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  25%
    background: linear-gradient(90deg, $color-text 0%, $color-text 70%, $color-accent-1 85%, $color-accent-1 100%, $color-text 115%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  30%, 100%
    color: $color-text

@media (max-width: 768px)
  #ascii-art
    font-size: clamp(0.35rem, 2.5vw, 0.8rem)
