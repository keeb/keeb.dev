#header
  margin: 0 auto 2rem
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-size: 100%

    ul
      margin: 0
      padding: 0
      list-style-type: none

      li
        margin-bottom: 10px
        text-transform: lowercase

        a
          display: inline-block
          margin-right: 15px
          padding-left: 1rem
          color: $color-accent-1
          border-right: 1px dotted
          border-color: $color-accent-1
          vertical-align: middle

        a:hover
          underline(5px, $color-accent-1)

        li
          margin-right: 15px
          border-right: 1px dotted
          border-color: $color-accent-1
          vertical-align: middle

        li:last-child
          border-right: 0

#ascii-art
  position: relative
  animation: wave-animation 3s ease-in-out infinite

#terminal-cursor
  color: $color-accent-1
  animation: cursor-blink 1s infinite
  font-size: 1em
  font-family: monospace
  vertical-align: bottom
  margin-left: 0.2em

@keyframes cursor-blink
  0%, 50%
    opacity: 1
  51%, 100%
    opacity: 0

@keyframes wave-animation
  0%
    color: $color-text
  10%
    background: linear-gradient(90deg, $color-accent-1 0%, $color-accent-1 10%, $color-text 20%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  20%
    background: linear-gradient(90deg, $color-text 0%, $color-accent-1 10%, $color-accent-1 20%, $color-text 30%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  30%
    background: linear-gradient(90deg, $color-text 0%, $color-text 10%, $color-accent-1 20%, $color-accent-1 30%, $color-text 40%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  40%
    background: linear-gradient(90deg, $color-text 0%, $color-text 20%, $color-accent-1 30%, $color-accent-1 40%, $color-text 50%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  50%
    background: linear-gradient(90deg, $color-text 0%, $color-text 30%, $color-accent-1 40%, $color-accent-1 50%, $color-text 60%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  60%
    background: linear-gradient(90deg, $color-text 0%, $color-text 40%, $color-accent-1 50%, $color-accent-1 60%, $color-text 70%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  70%
    background: linear-gradient(90deg, $color-text 0%, $color-text 50%, $color-accent-1 60%, $color-accent-1 70%, $color-text 80%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  80%
    background: linear-gradient(90deg, $color-text 0%, $color-text 60%, $color-accent-1 70%, $color-accent-1 80%, $color-text 90%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  90%
    background: linear-gradient(90deg, $color-text 0%, $color-text 70%, $color-accent-1 80%, $color-accent-1 90%, $color-text 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent
  100%
    background: linear-gradient(90deg, $color-text 0%, $color-text 80%, $color-accent-1 90%, $color-accent-1 100%)
    -webkit-background-clip: text
    background-clip: text
    color: transparent