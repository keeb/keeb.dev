.post-list
  padding: 0

  .post-item
    margin-bottom: 1.5rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      margin-bottom: 0.25rem
      min-width: 100px
      color: $color-meta
      font-size: 14px

    .post-excerpt
      margin-top: 0.5rem
      color: $color-meta
      font-size: 14px
      line-height: 1.4

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      flex-direction: column
      margin-bottom: 1.5rem

      .meta
        text-align: left
        margin-bottom: 0

      .post-excerpt
        margin-top: 0.5rem

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline
