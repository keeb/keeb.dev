.post-list
  padding: 0

  .post-item
    margin-bottom: 2.5rem
    margin-left: 0
    list-style-type: none
    background: linear-gradient(135deg, rgba(0,255,255,0.005) 0%, transparent 50%, rgba(255,0,150,0.005) 100%)
    border: 1px solid rgba(0,255,255,0.1)
    border-radius: 8px
    padding: 1.5rem
    transition: all 0.3s ease
    position: relative
    overflow: hidden
    
    &:before
      content: ""
      position: absolute
      top: 0
      left: -100%
      width: 100%
      height: 100%
      background: linear-gradient(90deg, transparent, rgba(0,255,255,0.03), transparent)
      transition: left 0.5s ease
    
    &:hover
      background: linear-gradient(135deg, rgba(0,255,255,0.02) 0%, transparent 50%, rgba(212, 128, 170, 0.02) 100%)
      border-color: rgba(212, 128, 170, 0.3)
      box-shadow: 
        0 0 20px rgba(212, 128, 170, 0.1),
        inset 0 1px 0 rgba(255,255,255,0.1)
      transform: translateY(-1px)
      
      &:before
        left: 100%

    .meta
      display: block
      margin-right: 16px
      margin-bottom: 0.25rem
      min-width: 100px
      color: $color-meta
      font-size: 14px

    .post-excerpt
      margin-top: 0.5rem
      color: $color-meta
      font-size: 14px
      line-height: 1.4

@media (min-width: 480px)
  .post-list
    .post-item
      margin-bottom: 1.5rem

      .post-title-date
        display: flex
        justify-content: space-between
        align-items: baseline

      .meta
        text-align: right
        margin-bottom: 0
        margin-right: 0
        margin-left: 16px

      .post-excerpt
        margin-top: 0.5rem

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline
