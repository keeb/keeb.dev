#archive
  .post-year
    list-style-type: none

  .post-list
    padding: 0

    .post-item
      margin-bottom: 2rem
      margin-left: 0
      list-style-type: none
      background: linear-gradient(135deg, rgba(0,255,255,0.003) 0%, transparent 50%, rgba(255,0,150,0.003) 100%)
      border: 1px solid rgba(0,255,255,0.06)
      border-radius: 6px
      padding: 1.25rem
      transition: all 0.3s ease
      position: relative
      overflow: hidden
      
      &:before
        content: ""
        position: absolute
        top: 0
        left: -100%
        width: 100%
        height: 100%
        background: linear-gradient(90deg, transparent, rgba(0,255,255,0.02), transparent)
        transition: left 0.5s ease
      
      &:hover
        background: linear-gradient(135deg, rgba(0,255,255,0.01) 0%, transparent 50%, rgba(212, 128, 170, 0.01) 100%)
        border-color: rgba(212, 128, 170, 0.2)
        box-shadow: 
          0 0 15px rgba(212, 128, 170, 0.08),
          inset 0 1px 0 rgba(255,255,255,0.05)
        transform: translateY(-1px)
        
        &:before
          left: 100%

      .meta
        display: block
        margin-right: 16px
        min-width: 100px
        color: $color-meta
        font-size: 14px

  @media (min-width: 480px)
    .post-list
      .post-item
        display: flex
        justify-content: space-between
        margin-bottom: 5px
        margin-left: 1rem

        .meta
          text-align: right
          margin-right: 0
          margin-left: 16px
