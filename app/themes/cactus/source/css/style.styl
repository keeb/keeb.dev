global-reset()

*, *:before, *:after
  box-sizing: border-box

/* Scroll bar */
/* For Firefox */
*
  scrollbar-color: $color-scrollbar transparent

/* For Chrome, Edge, and Safari */
*::-webkit-scrollbar
  width: 8px
  height: 6px

*::-webkit-scrollbar-track
  background: transparent

*::-webkit-scrollbar-thumb
  background-color: $color-scrollbar
  border-radius: 6px

*::-webkit-scrollbar-thumb:hover
  background-color: darken($color-scrollbar, 20%)

*::-webkit-scrollbar-thumb:active
  background-color: darken($color-scrollbar, 30%)

html
  margin: 0
  padding: 0
  height: 100%
  border-top: 2px solid $color-text
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  margin: 0
  height: 100%
  background-color: $color-background
  background-image: 
    linear-gradient(180deg, rgba(0,100,255,0.01) 0%, transparent 30%, transparent 70%, rgba(212,128,170,0.01) 100%),
    radial-gradient(ellipse at top, rgba(0,150,255,0.02) 0%, transparent 50%),
    radial-gradient(ellipse at bottom right, rgba(255,0,150,0.015) 0%, transparent 60%)
  color: $color-text
  font-display: swap // @stylint ignore
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  line-height: $line-height
  text-rendering: geometricPrecision
  flex: 1

  antialias()

  @extend $base-style
  
  // Override centering for left alignment
  &.max-width
    margin-left: 2rem
    margin-right: auto
  
  &:before
    content: ""
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    opacity: 0.04
    z-index: -1
    background-image: 
      repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(0,255,255,0.02) 2px, rgba(0,255,255,0.02) 4px),
      radial-gradient(circle at 20% 80%, rgba(255,0,150,0.03) 0%, transparent 20%),
      radial-gradient(circle at 90% 20%, rgba(0,255,255,0.03) 0%, transparent 20%)
    background-size: 100px 100px, 400px 400px, 300px 300px
    animation: cyber-glow 8s ease-in-out infinite alternate
    pointer-events: none
    
@keyframes cyber-glow
  0%
    opacity: 0.02
  100%
    opacity: 0.06

@keyframes cyber-scan
  0%
    transform: translateX(-100%)
  50%
    transform: translateX(100%)
  100%
    transform: translateX(-100%)

.content
  position: relative
  display: flex
  flex-direction: column
  min-height: 100%
  overflow-wrap: break-word

  p
    hyphens(manual)

  code
    hyphens(manual)

  a
    color: $color-text
    text-decoration: none
    transition: all 0.2s ease

    underline(5px, $color-text)

    &:hover
      color: rgba(0,255,255,0.9)
      text-shadow: 0 0 5px rgba(0,255,255,0.3)
      background-image: linear-gradient(transparent, transparent 4px, rgba(0,255,255,0.6) 4px, rgba(0,255,255,0.6))

  a.icon
    background: none

    &:hover
      color: $color-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: $color-main-page-header
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    underline(6px, $color-link)

  h6
    a
      background: none
      color: inherit
      text-decoration: none

  h6
    a:hover
      underline(6px, $color-link)

@media (min-width: 540px)
  .image-wrap
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      flex: 1 0 35%
      margin-right: 2rem

    p
      flex: 1 0 65%

.max-width
  max-width: none
  width: 100%
  margin-right: 8rem

// Override px3 - remove padding to maximize text width
.px3
  padding-right: 16rem
  padding-left: 0.5rem

// More vertical spacing
.py4
  padding-top: 3rem
  padding-bottom: 3rem

@media (max-width: 768px)
  .px3
    padding-right: 2rem
    padding-left: 2rem

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 1.5rem
    padding-left: 1.5rem

  .my4
    margin-top: 2rem
    margin-bottom: 2rem

@media (min-width: 480px)
  p
    text-align: justify

